---
import { getImage } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import Portfolio from '../components/Portfolio.astro';
import FAQ from '../components/FAQ.astro';
import About from '../components/About.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import SchemaOrg from '../components/SchemaOrg.astro';
import SmoothScroll from '../components/SmoothScroll.astro';
import heroImage from '../assets/img/sonnenhof-luftbild.JPG';

const optimizedImage = await getImage({ src: heroImage, format: 'webp', width: 1200 });
const schemaImage = new URL(optimizedImage.src, Astro.site).href;
---

<BaseLayout title="Sonnenhof Zieger - Kartoffeln, Kürbisse & mehr vom Bauernhof in Großostheim">
  <Fragment slot="head">
    <SchemaOrg image={schemaImage} />
  </Fragment>

  <Navigation />
  <Hero />
  <Portfolio />
  <FAQ />
  <About />
  <Contact />
  <Footer />
  <SmoothScroll />
</BaseLayout>
